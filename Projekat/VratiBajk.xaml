<Page x:Class="Projekat.VratiBajk"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projekat"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VratiBajk">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0">
            <TextBlock Text="Povratak bajsa" FontSize="25" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center" />

            <TextBlock FontSize="20" Text="Unesite naziv mesta gde ostavljate bicikl:" Margin="0,10,0,5" HorizontalAlignment="Center" />
            <TextBox x:Name="txtMestoPovratka" Height="25" Width="200" Margin="0,0,0,10" HorizontalAlignment="Center" />

            <TextBlock FontSize="20" Text="Da li je bicikl oštećen?" Margin="0,0,0,5" HorizontalAlignment="Center" />
            <CheckBox x:Name="chkBiciklOstecen" Width="20" HorizontalAlignment="Center" Margin="0,0,0,10" />
            

            <Button Content="Potvrdi" FontSize="20" Click="Potvrdi" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Page>
