<Window x:Class="Projekat.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="#F7F7F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#4D87B2" Height="40" HorizontalAlignment="Stretch">
            <StackPanel Orientation="Horizontal">
                <Button Width="100" Content="Bicikli" Click="PregledBajs" Margin="5"/>
                <Button Width="100" Content="Dodaj Bicikl" Click="DodajBajs"  Margin="5"/>
                <Button Width="100" Content="Oštećenja"  Margin="5" Click="Button_Click_1"/>
                <Button Width="100" Content="Iznajmljeni"  Margin="5" Click="Iznamjljeno"/>
                <Button Width="100" Content="Korisnici"  Margin="5" Click="Button_Click"/>
            </StackPanel>
            <Button Content="Log out"  HorizontalAlignment="Right" Margin="0,5,40,5" Click="Odjava"/>
            <Button Content="X" Click="Gasenje"  HorizontalAlignment="Right" Margin="0,5,10,5"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
